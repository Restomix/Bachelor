
@{
    ViewBag.Title = "Main";
}
<h2>Tracking</h2>
<div class="container">


</div>
<div class="container">
    <div class="row">
        <div class="col-md-6" id="scrollit">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">My sensors</a></li>
                @if (!User.IsInRole("admin"))
                {
                    <li><a data-toggle="tab" href="#menu1">Add new sensors</a></li>
                }
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Time</th>
                                <th scope="col">Water</th>
                                <th scope="col">Battery</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <div id="menu1" class="tab-pane">
                    @Html.Partial("~/Views/Shared/AddSensor.cshtml")
                </div>
            </div>


        </div>
        <div class="col-md-6">
            <div id="mapid"></div>
        </div>

    </div>
</div>
<script>

    var mymap = L.map('mapid').setView([51.505, -0.09], 13);
    L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw', {
        maxZoom: 18,
        attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, ' +
        '<a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
        'Imagery © <a href="http://mapbox.com">Mapbox</a>',
        id: 'mapbox.streets'
    }).addTo(mymap);

    function onMapClick(e) {
        var marker = L.marker(e.latlng, { draggable: true }).addTo(mymap);
        marker.bindPopup("<b>Hello world!</b><input type='text' name='description' ><br>I am a popup.").openPopup();
        $("#inputForLocation").html(e.latlng.toString());
  
    }
    mymap.on('click', onMapClick);
</script>