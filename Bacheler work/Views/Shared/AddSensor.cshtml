<form action="/Track/AddSensor" method="post" id="formForAddSensor">
    <input type="hidden" name="Id" />
    <div class="form-group">
        <label for="phoneNumber">Phone number:</label>
        <input type="text" class="form-control " name="phoneNumber" data-format="+3 (0dd) ddd-dddd">
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" name="description">
    </div>
    <div class="form-group">
        <label>Click on map to add location: </label>
        <br />
        <input class="form-control alert-link" type="text" id="inputForLocationFake" name="location"/>
        <input class="form-control alert-link" type="hidden" id="inputForLocation" name="location" />
    </div>
    <input type="hidden" name="Data" />
    <button type="submit" class="btn btn-default">Save</button>
</form>